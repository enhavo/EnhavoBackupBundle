<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Enhavo\Bundle\BackupBundle\Entity\BackupFile" table="backup_backup_file">
        <id name="id" type="integer" column="id">
            <generator />
        </id>

        <field name="path" nullable="true" />
        <field name="name" nullable="true" />

        <many-to-one field="backup" target-entity="Enhavo\Bundle\BackupBundle\Entity\Backup">
            <cascade>
                <cascade-persist />
                <cascade-remove />
                <cascade-refresh />
            </cascade>
        </many-to-one>

    </entity>
</doctrine-mapping>
